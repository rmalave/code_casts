<div class="jumbotron text-center">
  <h1>Welcome to Codecasts</h1>
  <h2>A membership site where you can watch developers code live.</h2>
</div>

<div class="row">
  <% if user_signed_in? %>
    <div class="col-md-6">
      <div class="well text-center">
        <h2>Your Profile</h2>
        <% if current_user.profile %>
          <%= link_to 'Edit your profile', edit_user_profile_path(user_id: current_user.id), class: "btn btn-info btn-lg btn-block" %>
          <%= link_to 'View your profile', user_path(current_user), class: "btn btn-info btn-lg btn-block" %>
        <% else %>
          <p>Fill your profile to share your information with others.</p>
          <%= link_to "Create your profile", new_user_profile_path(current_user), class: "btn btn-info btn-lg btn-block" %>
        <% end %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="well text-center">
        <h2>The Community</h2>
        <p>Visit the community to meet other developers, enteprenours and investors</p>
        <%= link_to 'Visit the community', users_path, class: "btn btn-info btn-lg btn-block" %>
      </div>
    </div>
  <% else %>
    <div class="col-md-6">
      <div class="well">
        <h2 class="text-center">Basic Membership</h2>
        <h4>Sign up for free and get basic access to the community.</h4><br>
        <%= link_to "Sign up to Basic.", new_user_registration_path(plan: @basic_plan.id), class: "btn btn-info btn-lg btn-block" %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="well">
        <h2 class="text-center">Pro Membership</h2>
        <h4>Sign up for the pro account for $9.99/month and get Access
        to the community and contact information!</h4>
        <%= link_to "Sign up to Pro!", new_user_registration_path(plan: @pro_plan.id), class: "btn btn-success btn-lg btn-block" %>
      </div>
    </div>
  <% end %>
</div>
