<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h1>Community</h1>
    <p>Welcom to the community. Users must fill out their profile
    to be visible to others.</p>
    <ul class="list-unstyled">
      <% @users.each do |user| %>
          <% if user.profile %>
              <li>
                <div class="well row <%= cycle('white-bg', '') %>">
                  <div class="col-sm-4 text-center">
                    <%= link_to user do %>
                        <%= image_tag user.profile.avatar.url(:thumb), class: 'profile-pic' %>
                    <%  end %>
                  </div>
                  <div>
                    <%= link_to user do %>
                      <h2><%= user.profile.first_name %> <%= user.profile.last_name %></h2>
                    <% end %>
                    <p>
                      <%= user.profile.job_title %>
                      <% if user.plan_id == 2 %>
                        <span class="label label-info">PRO</span>
                      <% end %>
                    </p>
                  </div>
                </div>
              </li>
          <% end %>
      <% end %>
    </ul>
  </div>
</div>
